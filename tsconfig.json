{
  "compilerOptions": {
    "target": "es2015",
    "outDir": "./dist/",
    "strictNullChecks": false,
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react",
    "baseUrl": ".",
    "lib": [
      "es2015",
      "dom.iterable",
      "es2016.array.include",
      "es2017.object",
      "dom"
    ],
    "module": "commonjs",
    "removeComments": true,
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "paths": {
      "@scss/*": ["src/scss/*"],
      "@ui/*":   ["src/ui/*"],
      "@ui":     ["src/ui/index"]
      // "@services/*": [
      //   "src/services/*",
      // ],
    }
  }
}